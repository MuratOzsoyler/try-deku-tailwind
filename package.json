{
  "name": "try-deku-tailwind",
  "version": "0.0.1",
  "description": "Try tailwindcss with purescript-deku",
  "main": "index.js",
  "module": "true",
  "scripts": {
    "build": "npm run build:purs && npm run build:esbuild && npm run build:tailwind",
    "build:purs": "npx spago build",
    "build:esbuild": "node ./esbuild.build.mjs",
    "build:tailwind": "npx tailwindcss -i ./src/style.css -o ./dist/style.css",
    "dev": "npm run build:purs && npm run build:tailwind && npm run dev:esbuild",
    "dev:esbuild": "node ./esbuild.serve.mjs",
    "dev:tailwind": "npx tailwindcss -i ./src/style.css -o ./dist/style.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Murat Özsöyler",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "esbuild": "0.19.5",
    "purescript": "^0.15.12",
    "spago": "^0.93.18",
    "tailwindcss": "^3.3.5"
  }
}